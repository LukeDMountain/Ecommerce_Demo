<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Caixa de usuário para registro -->
    <EditText
        android:id="@+id/edtNewUsername"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:hint="Novo Usuário"
        android:inputType="text" />

    <!-- Caixa de senha -->
    <EditText
        android:id="@+id/edtNewPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edtNewUsername"
        android:layout_centerHorizontal="true"
        android:hint="Nova Senha"
        android:inputType="textPassword" />

    <!-- Botão de confirmar registro -->
    <Button
        android:id="@+id/btnConfirmRegister"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/edtNewPassword"
        android:layout_centerHorizontal="true"
        android:text="Registrar" />

</RelativeLayout>
